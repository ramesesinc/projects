<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_routes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

			<TextView
			    android:id="@+id/tv_header_route"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:background="@android:color/darker_gray"
			    android:padding="2dp"
			    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:textColor="@android:color/white"
			    android:textSize="16sp"
			    android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_routes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_header_route"
                android:orientation="vertical" >

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_followups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp" >

			<TextView
			    android:id="@+id/tv_header_followup"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:background="@android:color/darker_gray"
			    android:padding="2dp"
			    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:textColor="@android:color/white"
			    android:textSize="16sp"
			    android:textStyle="bold" />
			
            <LinearLayout
                android:id="@+id/ll_followups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_header_followup"
                android:orientation="vertical" >

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_specials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

			<TextView
			    android:id="@+id/tv_header_special"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:background="@android:color/darker_gray"
			    android:padding="2dp"
			    android:textAppearance="?android:attr/textAppearanceMedium"
			    android:textColor="@android:color/white"
			    android:textSize="16sp"
			    android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_specials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_header_special"
                android:orientation="vertical" >

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</ScrollView>