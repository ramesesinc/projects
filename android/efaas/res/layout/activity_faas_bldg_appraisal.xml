<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="BUILDING APPRAISAL"
        android:minEms="6"
        android:padding="5dp"
        android:textStyle="bold"
        android:background="#2f84c9"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />
		
		<TableLayout
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:stretchColumns="0,1,2,3,4">
			
			    <TableRow
			      android:layout_width="0dp"
			      android:layout_height="wrap_content">
			
			        	<TextView
				          android:id="@+id/appraisal_classification"
				          android:text="Classification"
				          android:layout_column="0"
				          android:layout_margin="1dp"
				          android:layout_width="0dp"
				          android:layout_height="match_parent"
				          android:gravity="center"
				          android:minHeight="40dp"
				          android:textStyle="bold"
				          android:background="#b6c5e2"
				          android:textAppearance="?android:attr/textAppearanceSmall">
				        </TextView>
				
				        <TextView
				          android:id="@+id/appraisal_structuretype"
				          android:text="Structure Type"
				          android:layout_column="1"
				          android:layout_margin="1dp"
				          android:layout_width="0dp"
				          android:layout_height="match_parent"
				          android:gravity="center"
				          android:textStyle="bold"
				          android:background="#b6c5e2"
				          android:textAppearance="?android:attr/textAppearanceSmall">
				        </TextView>
				        
				        <TextView
				          android:id="@+id/appraisal_bldgkind"
				          android:text="Building Kind"
				          android:layout_column="2"
				          android:layout_margin="1dp"
				          android:layout_width="0dp"
				          android:layout_height="match_parent"
				          android:gravity="center"
				          android:textStyle="bold"
				          android:background="#b6c5e2"
				          android:textAppearance="?android:attr/textAppearanceSmall">
				        </TextView>
				        
				        <TextView
				          android:id="@+id/appraisal_basefloorarea"
				          android:text="Base Floor Area"
				          android:layout_column="3"
				          android:layout_margin="1dp"
				          android:layout_width="0dp"
				          android:layout_height="match_parent"
				          android:gravity="center"
				          android:textStyle="bold"
				          android:background="#b6c5e2"
				          android:textAppearance="?android:attr/textAppearanceSmall">
				        </TextView>
				        
				        <TextView
				          android:id="@+id/appraisal_basevalue"
				          android:text="Base Value"
				          android:layout_column="4"
				          android:layout_margin="1dp"
				          android:layout_width="0dp"
				          android:layout_height="match_parent"
				          android:gravity="center"
				          android:textStyle="bold"
				          android:background="#b6c5e2"
				          android:textAppearance="?android:attr/textAppearanceSmall">
				        </TextView>
			
			    </TableRow>
			
		</TableLayout> 
		
		<ListView
		      android:id="@+id/appraisal_list"
		      android:layout_width="match_parent"
		      android:layout_height="wrap_content" />
		
		<Button
	        android:id="@+id/appraisal_add"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:layout_gravity="center"
	        android:minEms="5"
	        android:padding="10dp"
	        android:text="Add"/>

</LinearLayout>
