<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="STRUCTURAL MATERIALS"
        android:minEms="6"
        android:padding="5dp"
        android:textStyle="bold"
        android:background="#2f84c9"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <TableLayout
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:stretchColumns="0,1,2">
			
			    <TableRow
			      android:layout_width="0dp"
			      android:layout_height="wrap_content">
			
			        	<TextView
				          android:id="@+id/material_floorno"
				          android:text="Floor No."
				          android:layout_column="0"
				          android:layout_margin="1dp"
				          android:layout_width="0dp"
				          android:layout_height="match_parent"
				          android:gravity="center"
				          android:minHeight="40dp"
				          android:textStyle="bold"
				          android:background="#b6c5e2"
				          android:textAppearance="?android:attr/textAppearanceSmall">
				    	</TextView>
				
				        <TextView
				          android:id="@+id/material_structure"
				          android:text="Structure"
				          android:layout_column="1"
				          android:layout_margin="1dp"
				          android:layout_width="0dp"
				          android:layout_height="match_parent"
				          android:gravity="center"
				          android:textStyle="bold"
				          android:background="#b6c5e2"
				          android:textAppearance="?android:attr/textAppearanceSmall">
				        </TextView>
				        
				        <TextView
				          android:id="@+id/material_material"
				          android:text="Material"
				          android:layout_column="2"
				          android:layout_margin="1dp"
				          android:layout_width="0dp"
				          android:layout_height="match_parent"
				          android:gravity="center"
				          android:textStyle="bold"
				          android:background="#b6c5e2"
				          android:textAppearance="?android:attr/textAppearanceSmall">
				        </TextView>
			
			    </TableRow>
			
		</TableLayout> 
        
		<ListView
	        android:id="@+id/material_list"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
		
		<Button
	        android:id="@+id/material_add"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="10dp"
	        android:layout_gravity="center"
	        android:minEms="5"
	        android:padding="10dp"
	        android:text="Add" />
    

</LinearLayout>
