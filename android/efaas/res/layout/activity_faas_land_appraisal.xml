<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    
    <TextView
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:text="APPRAISAL INFORMATION"
         android:minEms="6"
         android:padding="5dp"
         android:textStyle="bold"
         android:background="#2f84c9"
         android:textColor="#FFFFFF"
         android:gravity="center"
         android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3,4,5" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/appraisal_subclass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:gravity="center"
                android:minHeight="40dp"
                android:text="Sub Class"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:background="#b6c5e2">
            </TextView>

            <TextView
                android:id="@+id/appraisal_specificclass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Specific Class"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold"
                android:background="#b6c5e2">
            </TextView>

            <TextView
                android:id="@+id/appraisal_actualuse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Actual Use"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" 
                android:background="#b6c5e2">
            </TextView>

            <TextView
                android:id="@+id/appraisal_strip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="3"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Strip"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" 
                android:background="#b6c5e2">
            </TextView>

            <TextView
                android:id="@+id/appraisal_areasqm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_column="4"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Area (sqm)"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textStyle="bold" 
                android:background="#b6c5e2">
            </TextView>
            
        </TableRow>
        
    </TableLayout>

    <ListView
        android:id="@+id/appraisal_list"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:divider="@null"
		android:dividerHeight="0dp"/>

    <TextView
        android:id="@+id/appraisal_totalarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="22dp"
        android:gravity="right"
        android:text="TOTAL AREA (SQM) : "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" >
    </TextView>

    <Button
        android:id="@+id/appraisal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:minEms="5"
        android:padding="10dp"
        android:text="Add" />

</LinearLayout>