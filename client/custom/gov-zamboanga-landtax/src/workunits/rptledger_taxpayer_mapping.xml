<workunit extends="com/rameses/seti2/templates/CrudList.xml"
    schemaName="rptledger"
    cols="owner.name,taxpayer.address.text,tdno,fullpin,totalareasqm,cadastrallotno,totalmv,totalav"
    hiddenCols="taxpayer.objid,faasid,barangayid,rputype"
    allowCreate="false"
    allowEdit="false"
    allowDelete="false"
    allowPrint="false"
    allowOpen="false"
    surroundSearch="false" 
    customFilter="taxpayer.objid is null" 
    multiSelect="true" 
    orderBy="owner.name,tdno"
>
    <invokers>
        <invoker folderid="/menucategory/landtax/util" 
                action="init" caption="Ledger and Taxpayer Mapping"  
                 target="window" index="0"  
                 role="SUPPORT" permission="rptledger.mapping"/>                
        
        <invoker type="listActions" 
                 action="assignTaxpayer" 
                 caption="Assign Property Owner" />                 
    </invokers>
    <code class="gov.zamboanga.landtax.models.LedgerTaxpayerMappingModel" />

</workunit>
