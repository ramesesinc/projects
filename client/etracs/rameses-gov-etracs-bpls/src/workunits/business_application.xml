<workunit>
    <invokers>
        
        <invoker type="business_application:open" caption="Business Info" action="open" target="window" />
        <invoker type="global:barcode:51005" caption="Business Application" action="openBarcode" 
            target="window" expr="#{barcodeid.contains('-')}" />
       
        <invoker type="formActions" caption="Close"  
         action="_close" visibleWhen="#{task==null}" index="0"/>      
        
        <invoker type="extActions" caption="Unified Form" action="showUnifiedFormMenu"
            icon="images/toolbars/printer.png"/>
        
        <invoker type="extActions" caption="Issue Permit"  
         action="issuePermit" visibleWhen="#{entity.state=='COMPLETED' &amp;&amp; entity.apptype!='RETIRE' &amp;&amp; entity.permit?.objid==null}" index="2" role="LICENSING"/>  
        
        <invoker type="extActions" caption="Print Permit"  action="printPermit" 
                 visibleWhen="#{entity.state=='COMPLETED' &amp;&amp; entity.apptype!='RETIRE' &amp;&amp; entity.permit?.objid!=null}" index="2" role="LICENSING"/>      

        <invoker type="extActions" caption="View Business" index="0" action="viewBusiness" />

        <!-- form actions -->     
        <invoker type="formActions" caption="Edit LOB" role="ASSESSOR" action="editLob"
             visibleWhen="#{!caller.prevmode?.contains('assessment') &amp;&amp; task.state.contains('assessment') &amp;&amp; task?.owner==true &amp;&amp; mode=='default'}"/>      
        
        <invoker type="formActions" caption="Edit App Info" role="ASSESSOR" action="editAppInfo"
             visibleWhen="#{!caller.prevmode?.contains('assessment') &amp;&amp; task.state.contains('assessment') &amp;&amp; task?.owner==true  &amp;&amp; mode=='default'}"/>      
          
    </invokers>
    
    <code class="com.rameses.gov.etracs.bpls.models.BusinessApplicationModel" />
    
    <pages>
        <page template="com.rameses.gov.etracs.bpls.view.BusinessApplicationPage"/>
    </pages>
    
</workunit>