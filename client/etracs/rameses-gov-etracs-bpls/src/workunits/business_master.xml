<workunit allowCreate="false" allowDelete="false" schemaName="business">
    <invokers>
        <!--
        <invoker type="business_application:formActions" caption="Business Info" action="openFromApp" visibleWhen="#{entity!=null}"
            index="100" target="popup"/>
        -->
        
        <invoker type="business:open" caption="Business Info" 
            formId="#{entity.objid}"
            formTitle="#{entity.bin}"
            action="open" 
            index="100" target="window"/>
        
        <invoker type="global:barcode:51005" caption="Business" 
            formId="#{entity.objid}"
            formTitle="#{entity.bin}"
            action="openBarcode" target="window"
            expr="#{!barcodeid.contains('-')}"/>

        <invoker type="formActions" caption="Send SMS" action="createSMS" immediate="true" /> 
        
        <!-- USE FOR SECURITY CHECK --> 
        <invoker type="business:admin:securitycheck" role="ADMIN" index="-9999"/> 
        <invoker type="business:showeditmenu" role="BUSINESSINFO,ASSESSOR"/>
    </invokers>
    
    <code class="com.rameses.gov.etracs.bpls.models.BusinessMasterModel" />
    
    <pages>
        <page template="com.rameses.gov.etracs.bpls.views.BusinessMasterPage"/>
    </pages>
    
</workunit>