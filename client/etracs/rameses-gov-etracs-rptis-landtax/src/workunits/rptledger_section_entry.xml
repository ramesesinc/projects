<?xml version="1.0" encoding="UTF-8"?>
<workunit>
    <invokers>
        <invoker type="rptledger:section" action="init" caption="Entries" index="10"/> 
        
        <invoker type="itemActions" 
                 action="addLedgerItem" caption="Add" mnemonic="a" 
                 visibleWhen="#{entity.state=='APPROVED'}"  
                role="ADMIN" depends="selectedLedgerItem" />
            
        <invoker type="itemActions" 
                 action="deleteLedgerItem" caption="Delete" 
                 visibleWhen="#{entity.state=='APPROVED' &amp;&amp; selectedItem != null &amp;&amp; selectedItem.taxdifference == 1}"  
                 role="ADMIN" mnemonic="d" depends="selectedItem" />
    </invokers>
    
    <code class="com.rameses.gov.etracs.landtax.models.RPTLedgerEntryModel">
    </code>
    
    <pages>
        <page template="com.rameses.gov.etracs.landtax.views.RPTLedgerEntryPage" />
    </pages>
</workunit>
