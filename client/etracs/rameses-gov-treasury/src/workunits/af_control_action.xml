<workunit>
     
    <invokers>
        
        <invoker type="af_control:form:actions" caption="Activate" action="activate" 
                 visibleWhen="#{ entity.state=='ISSUED' &amp;&amp; entity.active ==0}" />
        <invoker type="af_control:form:actions" caption="Deactivate" action="deactivate"
                 visibleWhen="#{entity.state=='ISSUED' &amp;&amp;  entity.active !=0}" />
        <invoker type="af_control:form:actions" caption="Assign Subcollector" action="assign" 
            visibleWhen="#{entity.state=='ISSUED' &amp;&amp; entity.assignee?.objid==entity.owner?.objid }"  />
        
        <invoker type="af_control:form:actions" caption="Unassign Subcollector" action="unassign"   
            visibleWhen="#{entity.state=='ISSUED' &amp;&amp;  entity.assignee?.objid!=entity.owner?.objid}" />        
        
        <invoker type="af_control:form:actions" caption="Assign Fund" action="assignFund"  
            xvisibleWhen="#{selectedItem!=null &amp;&amp; selectedItem.afid == '51' &amp;&amp; selectedItem.fund?.objid==null}" />
        
        <invoker type="af_control:form:actions" caption="Unassign Fund" action="unassignFund"  
            xvisibleWhen="#{selectedItem!=null &amp;&amp; selectedItem.afid == '51' &amp;&amp; selectedItem.fund?.objid!=null}"/>
    </invokers>
   
    <code class="com.rameses.enterprise.treasury.models.AFControlModel" />
   
    <pages>
        <page template="com.rameses.enterprise.treasury.views.AFControlNewPage" />
    </pages> 
       
</workunit>
