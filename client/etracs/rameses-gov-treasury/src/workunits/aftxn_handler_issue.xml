<!-- REQUISITION ISSUE SLIP -->
<workunit>
    <invokers>
        <invoker type="aftxn:handler" name="ISSUE" caption="ISSUE" index="2"/>
 
        <invoker type="aftxn:handler:issue" action="init" caption="Issue"/>
        
        <!-- actions -->
        <invoker type="formActions" action="close" caption="Back" immediate="true" visibleWhen="#{ mode == 'create' }"/>
        <invoker type="formActions" action="saveCreate" caption="Next"  visibleWhen="#{ mode == 'create' }" />
        
        <!-- when in open mode -->
        <invoker type="formActions" action="exit" caption="Close" immediate="true" visibleWhen="#{ mode == 'open' }"/>
        <invoker type="formActions" action="post" caption="Post" visibleWhen="#{ mode == 'open' }"/>
        
    </invokers>
    <code class="com.rameses.enterprise.treasury.models.AFTxnHandlerIssue" />
    <papges>
        <page name="create" template="com.rameses.enterprise.treasury.views.AFTxnEntryPage" />
        <page name="open" template="com.rameses.enterprise.treasury.views.AFTxnViewPage" />
    </papges>
</workunit>