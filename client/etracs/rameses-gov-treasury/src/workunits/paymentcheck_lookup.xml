<workunit extends="com/rameses/seti2/templates/CrudLookup.xml" schemaName="paymentcheck" allowDelete="false"
           allowCreate="false" allowOpen="false">
    <invokers>
       
        <invoker type="paymentcheck_split:lookup" caption="Lookup Cash Receipt" 
                 action="init" index="10" target="popup" 
                 cols="refno,receivedfrom,bank.name,refdate,balance"
                 hiddenCols="bank.objid"
                    customFilter=" amount - amtused > 0 AND depositvoucherid IS NULL"/>
        
        <invoker type="paymentcheck_undeposited:lookup" caption="Lookup Undeposited Cash Receipt" 
                 action="init" index="10" target="popup" 
                 cols="refno,receivedfrom,bank.name,refdate,amount"
                 hiddenCols="bank.objid" multiSelect="true"
                    customFilter=" depositslipid IS NULL "/>
        
        <!--
         <invoker type="paymentcheck:depositfund:lookup" caption="Lookup Undeposited Cash Receipt" 
                 action="init" index="10" target="popup" 
                 cols="refno,receivedfrom,bank.name,refdate,amount"
                 hiddenCols="bank.objid" multiSelect="true"
                 customFilter=" bankdepositid IS NULL AND depositfundid = :depositfundid"/>
         -->
         
         <!-- used in DepositVoucherFudModel -->
         <invoker type="paymentcheck:undeposited:withoutfund:lookup" caption="Lookup Check Payments (Without Fund)" 
                 action="init" index="10" target="popup" 
                 cols="refno,receivedfrom,bank.name,refdate,amount"
                 hiddenCols="bank.objid" multiSelect="true"
                 customFilter=" depositvoucherid = :depositvoucherid AND fundid IS NULL AND  depositslipid IS NULL "/>
         
         <invoker type="paymentcheck:undeposited:withfund:lookup" caption="Lookup Payment Checks" 
                 action="init" index="10" target="popup" 
                 cols="refno,receivedfrom,bank.name,refdate,amount"
                 hiddenCols="bank.objid" multiSelect="true"
                 customFilter=" depositvoucherid = :depositvoucherid AND fundid = :fundid AND  depositslipid IS NULL "/>
    </invokers>
</workunit>