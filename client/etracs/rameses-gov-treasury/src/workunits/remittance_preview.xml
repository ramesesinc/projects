<workunit extends="workunits/form_report.xml">
    <invokers>

        <invoker type="remittance:preview" 
                 caption="Remittance" 
                 windowTitle="#{entity.controlno}"
                 formTitle="Remittance #{entity.controlno}"
                 formId="#{entity.objid}"
                 action="view" target="popup" 
                 index="10" width="1024" height="600"/>        
        
        <!--
        <invoker type="remittance:form_report" caption="Remittance" action="view" target="popup" 
                height="1200" width="1024"/>
        -->
        <invoker type="formActions" caption="Accept" action="accept" index="100" visibleWhen="#{ reportData.state == 'OPEN' }"/>
        <invoker type="formActions" caption="Send Back" action="sendBack" index="100" visibleWhen="#{ reportData.state == 'OPEN' }"/>
        <invoker type="formActions" caption="Affix Collector Signature" action="signCollector" 
                 index="100" visibleWhen="#{ reportData.state != 'OPEN' &amp;&amp; reportData.collector.signature == null }"/>
        <invoker type="formActions" caption="Affix Approver Signature" action="signApprover" 
                 index="100" visibleWhen="#{ reportData.state != 'OPEN' &amp;&amp; reportData.liquidatingofficer.signature == null }"/>
    </invokers>
    <code class="com.rameses.enterprise.treasury.models.RemittanceApprovalModel" />
</workunit>  