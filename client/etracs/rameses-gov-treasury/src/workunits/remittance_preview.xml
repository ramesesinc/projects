<workunit extends="workunits/form_report.xml">
    <invokers>

        <invoker type="remittance:preview" 
                 windowTitle="#{entity.controlno}"
                 formTitle="Remittance #{entity.controlno}"
                 formId="#{entity.objid}"
                 caption="Remittance" action="view" 
                 target="popup" index="10" 
                 width="1024" height="700"/>        

        <!-- form actions --> 
        <invoker type="formActions" 
                 caption="Accept" action="accept" 
                 visibleWhen="#{ reportData.state == 'OPEN' }" 
                 mnemonic="a" index="100" />
        
        <invoker type="formActions" 
                 caption="Send Back" action="sendBack" 
                 visibleWhen="#{ reportData.state == 'OPEN' }" 
                 mnemonic="b" index="100" />
        
        <invoker type="formActions" 
                 caption="Affix Collector Signature" action="signCollector" 
                 visibleWhen="#{ reportData.state != 'OPEN' &amp;&amp; reportData.collector.signature == null }" 
                 index="100" />
        
        <invoker type="formActions" 
                 caption="Affix Approver Signature" action="signApprover" 
                 visibleWhen="#{ reportData.state != 'OPEN' &amp;&amp; reportData.liquidatingofficer.signature == null }" 
                 index="100" />
    </invokers>
    
    <code class="com.rameses.enterprise.treasury.models.RemittanceApprovalModel" />
</workunit>  