<workunit extends="com/rameses/seti2/templates/CrudLookup.xml" schemaName="itemaccount">
    <invokers>
        <invoker type="itemaccount:lookup" caption="Lookup Item Account" action="init" target="popup"
            cols="code,title,fund.title,type,org.code" hiddenCols="fund.objid" />
        
       <invoker type="payableaccount:lookup" caption="Lookup Payable Account" action="init" target="popup"
            cols="code,title,fund.title,type,org.code" hiddenCols="fund.objid" tag="PAYABLE"/>
       
       <invoker type="receivableaccount:lookup" caption="Lookup Receivable Account" action="init" target="popup"
            cols="code,title,fund.title,type,org.code" hiddenCols="fund.objid" tag="RECEIVABLE"/>
       
       <invoker type="cashinbankaccount:lookup" caption="Lookup Cash In Bank Account" action="init" target="popup"
            cols="code,title,fund.title,type,org.code" hiddenCols="fund.objid" tag="CASH_IN_BANK"/>
       
       <invoker type="cashintreasuryaccount:lookup" caption="Lookup Cash In Treasury Account" action="init" target="popup"
            cols="code,title,fund.title,type,org.code" hiddenCols="fund.objid" tag="CASH"/>
    </invokers> 
   
    <code>
        <![CDATA[
        
        import com.rameses.osiris2.common.*;
        import com.rameses.rcp.common.*;
        import com.rameses.rcp.annotations.*;
        import com.rameses.osiris2.client.*;
        import com.rameses.util.*;
        import com.rameses.seti2.models.*;
        
        class ItemAccountLookup extends CrudLookupModel { 
        
            def fundid;
            
            public def getCustomFilter() {
                def s = [];
                def parm = [:];
                if(fundid) {
                    s << "fund.objid = :fundid";
                    parm.fundid = fundid;
                }
                
                if(tag) {
                    s << "state='APPROVED' AND type= :atype ";
                    parm.atype = tag;
                }
                return [s.join(" AND "), parm ];
            }
        
        }        
                                
        ]]>
    </code>    
    
</workunit>