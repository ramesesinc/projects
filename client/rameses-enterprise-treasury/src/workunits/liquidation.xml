<workunit>
    
   <invokers>
         <invoker type="liquidation:create" caption="Liquidation" action="create"
                icon="home/icons/liquidation.png"
                  target="window"/>
         
         <invoker type="unliquidated_remittance:listActions" caption="Liquidate" action="create"
                role="LIQUIDATING_OFFICER"
                target="window"/>

                  
           <invoker folderid="home/collection" caption="Liquidate" action="create"
                icon="home/icons/liquidation.png" role="LIQUIDATING_OFFICER"
                  target="window"/>
         <!--
         <invoker type="liquidation:liquidate" caption="Liquidation" action="liquidate" target="popup"/>
         -->
         
         <invoker type="quick_launcher" code="LIQ" caption="Liquidation" action="init" target="window" role="LIQUIDATING_OFFICER"/>
         <invoker type="liquidation:open" caption="Liquidation (Open)" action="open" target="window"/>
         
         <!-- liquidate buttons -->
         <invoker type="formActions" caption="Close" name="_close"  immediate="true" mnemonic="c" shortcut="ctrl C" icon="images/toolbars/cancel.png"/>
         <invoker type="formActions" caption="Post" name="post" visibleWhen="#{entity.state=='DRAFT'}" mnemonic="s" shortcut="ctrl S" icon="images/toolbars/save.png"/>
         <invoker type="formActions" caption="Delete" action="delete" visibleWhen="#{ entity.state=='DRAFT' }" />

         <invoker type="formActions" caption="Print" name="preview"  visibleWhen="#{entity.state=='APPROVED'}" action="preview" />
         <invoker type="formActions" caption="Reports" name="popupReports"  visibleWhen="#{entity.state=='APPROVED'}" category="liquidation:reports" />
         
         
         <!-- CASHIER FUNCTIONS -->
         <invoker type="formActions" caption="Approve for Deposit" action="approve" 
                    visibleWhen="#{mode == 'read' &amp;&amp; entity.state == 'OPEN' }"
                  role="CASHIER" permission="liquidation.approve" />

   </invokers>

   <code class="com.rameses.enterprise.treasury.models.LiquidationModel" />
   
   <pages>
       <page name="create" template="com.rameses.enterprise.treasury.views.LiquidationNewPage" />
       <page name="view" template="com.rameses.enterprise.treasury.views.LiquidationViewPage" />
   </pages>
   
</workunit>