<workunit>
    
    <invokers>
        <invoker folderid="home/treasury" caption="Remit" action="create" role="COLLECTOR" target="window"/>
        <!--invoker folderid="home/remittance" caption="Capture Remittance" action="create" role="COLLECTOR" target="window"/-->
        <invoker type="remittance:create" caption="Remittance" action="create" target="window"/>
        <invoker type="quick_launcher" code="REM" caption="Remittance" action="create" target="window" role="COLLECTOR"/>
        
        <!-- OPEN ACTION -->
        <invoker type="remittance:open" caption="Remittance (Open)" action="open" target="popup"/>

        <invoker folderid="explorer/txn/treasury" caption="Remittance (Capture)" action="capture" target="window"/>
        
        
        <invoker type="formActions" caption="Close" name="_close" immediate="true" index="-5" mnemonic="c" shortcut="ctrl C" icon="images/toolbars/cancel.png"/>
        <!-- for initial capture -->
        <invoker type="formActions" caption="Next" visibleWhen="#{mode == 'capture' }" mnemonic="n" 
                 shortcut="ctrl N" action="create"/>
  
        <!-- for create -->
        <invoker type="formActions" caption="Submit" name="submit" visibleWhen="#{mode == 'create' }" mnemonic="s" 
                 shortcut="ctrl S" icon="images/toolbars/save.png"/>
        
        <!-- approval actions -->
        <invoker type="formActions" caption="Approve for Liquidation" name="approve" 
                 mnemonic="e" role="LIQUIDATING_OFFICER" visibleWhen="#{entity.state == 'OPEN' }"/>
        
        <invoker type="formActions" caption="Disapprove" name="disapprove" mnemonic="e" 
                 role="LIQUIDATING_OFFICER" visibleWhen="#{entity.state == 'OPEN' }"/>
    
        <!-- common in read -->
        <invoker type="formActions" caption="Print"  name="print" visibleWhen="#{mode == 'read' }" />
        <invoker type="formActions" caption="Reports" name="popupReports" visibleWhen="#{mode == 'read' }" category="remittance:reports" />
        
    </invokers>
   
    <code class="com.rameses.enterprise.treasury.models.RemittanceModel" />
   
    <pages>
        <page name="capture" template="com.rameses.enterprise.treasury.views.RemittanceCapturePage" />
        <page name="create" template="com.rameses.enterprise.treasury.views.RemittanceNewPage" />
        <page name="view" template="com.rameses.enterprise.treasury.views.RemittanceViewPage" />
    </pages> 
       
</workunit>
