<workunit extends="com/rameses/seti2/templates/CrudNodeList.xml" allowCreate="false" allowDelete="false" 
        schemaName="remittance">
    <invokers>
        <invoker folderid="/explorer/txn/treasury" caption="Unliquidated Remittances" role="LIQUIDATING_OFFICER"  
                 action="init"
                 cols="txnno,remittancedate,collector.name,totalcash,totalnoncash,amount,liquidated"/>
        
        <invoker folderid="home/treasury/liquidation" caption="Unliquidated Remittances" role="LIQUIDATING_OFFICER" 
            cols="txnno,remittancedate,collector.name,totalcash,totalnoncash,amount,liquidated"
            action="init" />
        
        <invoker type="listActions" caption="Prepare Liquidation" action="doLiquidation" />
    </invokers>
    
    <code>
        <![CDATA[
        class UnliquidatedRemittance extends com.rameses.seti2.models.CrudListModel {
        
            def fetchNodeList( def o ) {
                def list = [];
                list << [ id:'approval', title: 'For Approval', state:'OPEN' ];
		list << [ id:'approved', title: 'For Liquidation Now Na!', state:'APPROVED' ];
		list << [ id:'liquidated', title: 'Liquidated', state:'APPROVED' ];
		list << [ id:'hold', title: 'On Hold', state:'HOLD' ];	
                return list;
            }
        
        }
        ]]>
    </code>    
    
</workunit>

