<schema>

	<element tablename="sys_rule_actiondef">
		<field name="objid" primary="true"/>
		<field name="name" required="true" indexed="true"/>
		<field name="actionname" required="true" indexed="true"/>
		<field name="actionclass" required="false" indexed="true"/>
		<field name="sortorder" required="true"/>
		<field name="title" required="true" indexed="true"/>
		<field name="domain" indexed="true"/>

		<complex name="params" ref="sys_rule_actiondef_param" jointype="one-to-many">
			<key field="objid" target="parentid"/>
		</complex>	
	</element>	


</schema>	

