import com.rameses.annotations.*
import com.rameses.common.*
import java.rmi.server.UID
import java.text.SimpleDateFormat;
import com.rameses.services.extended.*;

class ChangeInfoService  {	

	@Service("PersistenceService")
	def persistenceService;

	@ProxyMethod
	public def update( o ) { 
		if ( !o.info._schemaname ) throw new Exception("ChangeInfoService error. Please include as schemaname");
		
		if ( o.info._tag ) { 
			// this is the flag or marker where the client 
			// defines a customize code in updating the record.  
			// we let the interceptors handle this... 
		} else { 
			persistenceService.update( o.info );
		}
	}
}