import com.rameses.annotations.*;
import com.rameses.common.*;
import com.rameses.services.extended.*;


class LandSpecificClassService extends ActiveCrudListService
{
	@ActiveDB('landspecificclass')
	def em
	
	String pagingKeys = 'objid'

	void beforeList(params){
		if (params == null) params = [:]
		params.searchtext = (params.searchtext ? params.searchtext :'')+'%'
	}

	@ProxyMethod
	public def getColumns( params ) {
	    return [
            [name:"code", caption:"Code", width:80],
            [name:"name", caption:"Name", width:250],
            [name:"state", caption:"State", width:100],
        ]
	}

	@ProxyMethod
	public def getSpecificClasses( params ) {
		beforeList(params)
		return em.getSpecificClasses(params)
	}


	@Async
	@ProxyMethod
	public def exportData(params) {
		return [
			filetype: 'landspecificclass',
			landspecificclasses: getSpecificClasses([:])
		] 
	}

	@Async
	@ProxyMethod
	public def importData( data ) {
		if (data.filetype != 'landspecificclass')
			throw new Exception('Invalid data.')
		data.landspecificclasses.each{
			save(it)
		}
	}
}
