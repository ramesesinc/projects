<schema>
	
	<element tablename="bankdeposit">
		<field name="objid" primary="true" prefix="BNKDEP"/>
		<field name="depositid" required="true"/> 
		<field name="depositedby_objid" required="true"/> 
		<field name="depositedby_name" required="true"/> 
		 
		<field name="depositdate" required="true" type="date"/>

		<complex name="bankaccount" ref="bankaccount" jointype="many-to-one" includefields="code,title,bank.name" required="false">
			<key field="bankaccountid" target="objid"/>
		</complex>
		<field name="amount" required="true"  type="decimal"/> 
		<field name="totalcash" required="true"  type="decimal"/> 
		<field name="totalcheck" required="true"  type="decimal"/> 
		<complex name="cashbreakdown" serializer="default" type="list"/> 
		<field name="validationno" /> 
		<field name="validationdate" /> 

		<complex name="checks" ref="cashreceipt_check" jointype="one-to-many">
			<key field="objid" target="bankdepositid" />
		</complex> 
	</element>

</schema>
