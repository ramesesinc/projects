<schema>
	<element tablename="paymentorder">
		<field name="objid" primary="true"/>
		<field name="txndate" type="timestamp" required="true" />
		<field name="payer_objid" required="true" />
		<field name="payer_name" required="true" />
		<field name="paidby" required="true" />
		<field name="paidbyaddress" required="true" />
		<field name="particulars" required="true" />
		<field name="amount" type="decimal" required="true" />
		<field name="expirydate" type="date" required="true" />
		<field name="refid"  />
		<field name="refno" />
		<field name="controlno" />
		<field name="locationid" />
		<field name="receiptid" />
		<field name="origin" />
		<complex name="info" serializer="default" required="true"/>

		<complex name="collectiontype" ref="collectiontype" jointype="many-to-one" required="true" includefields="objid,handler,barcodekey,formno">
			<key field="collectiontypeid" target="objid"/>
		</complex>
		<complex name="items" serializer="default" required="false" type="list" />
		<!--
		<complex name="items" ref="paymentorder_item" jointype="one-to-many" required="false">
			<key field="objid" target="parent_objid"/>
		</complex>
		-->
	</element>
</schema>

