import com.rameses.annotations.*;

class PaymentCheckListInterceptor {

	@DataContext("paymentcheck")
	def pmtChk;

	@After(pattern="QueryService.getNodeList", eval="#{ args[0]._schemaname == 'paymentcheck' }")
	public void getNodes( evt ) { 
		def x = evt.args[0];
		def result = evt.result; 
		result << [ id:'unused', title: 'Unused Checks'];
		result << [ id:'partial', title: 'Partial Used Checks'];
		result << [ id:'undeposited', title: 'Undeposited Checks'];
		result << [ id:'deposited', title: 'Deposited Checks' ];
	}

	@Before(pattern="QueryService.getList", eval="#{ args[0]._schemaname == 'paymentcheck' }")
	public void loadList(def evt) {
		def o = evt.args[0];

		//o.debug = true;
		if( !o.node?.id ) return;

		def str = "";
		def m = [:]

		switch(o.node.id) {
			case "unused":
				str = " amtused = 0 ";
				break;

			case "partial":
				str = " (amtused > 0) and (amtused <> amount) ";
				break;	

			case "undeposited":
				str = " (amtused = amount) AND (depositslipid IS NULL) ";
				break;

			case "deposited":
				str = "NOT( depositslipid IS NULL )";
				break;
		}

		if( o.where ) {
			o.where[0] = str + " AND " + o.where[0];	
			o.where[1].putAll( m );
		}
		else {
			o.where = [str, m];
		}
	}	

	@Before(pattern="PersistenceService.removeEntity", eval="#{ args[0]._schemaname == 'paymentcheck' }")
	public void removeRecord( evt ) { 
		def x = evt.args[0];
		def m = pmtChk.find( [objid: x.objid ] ).first();
		if( m.amtused  > 0 ) throw new Exception("Cannot remove this check. It is already used");
	}

}
