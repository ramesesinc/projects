import com.rameses.annotations.*
import com.rameses.common.*;
import com.rameses.services.extended.*;


class KioskLandTaxElectronicReceiptInterceptor
{
    @Service('RPTReceiptService')
    def receiptSvc 

    @ActiveDB('cashreceiptrpt')
    def cashreceiptrpt


    @After(pattern="XElectronicReceiptService.post", eval="#{args[0].txntype.objid=='rptcol'}")
    public void postItems(evt){
        def rct = evt.result 
        def pmo = evt.args[0]
        rct.billid = pmo.refid 
        rct.rptitems = pmo.rptitems 
        rct.txntype = 'eor'
        receiptSvc.createReceipt(rct)
    }
}

