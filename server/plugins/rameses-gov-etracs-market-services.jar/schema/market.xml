<schema adapter="market">
	<element tablename="market">
		<field name="objid" primary="true" prefix="MKT"/>
		<field name="name" required="true" caption="Market Name" />
		<field name="state" required="true" defaultValue="ACTIVE" visible="false"/>
		<field name="code" required="true" caption="Market Code"/>

		<!-- address -->
		<field name="address_type" caption="Address Type" visible="false"/>
		<field name="address_text" caption="Address"  />
		<field name="address_barangay_objid" required="true"  visible="false"/>
		<field name="address_barangay_name" required="true" caption="Barangay Name" visible="false"/>
		<field name="address_city" caption="City" visible="false"/>
		<field name="address_province"  caption="Province" visible="false"/>
		<field name="address_municipality"  caption="Municipality" visible="false"/>
		<field name="address_unitno"  caption="Unit No" visible="false"/>
		<field name="address_street"  caption="Street" visible="false"/>
		<field name="address_subdivision"  caption="Subdivision" visible="false"/>
		<field name="address_bldgno" caption="Building No" visible="false"/>
		<field name="address_bldgname"  caption="Building Name" visible="false"/>
		<field name="address_pin" caption="PIN" visible="false"/>
	</element>
</schema>