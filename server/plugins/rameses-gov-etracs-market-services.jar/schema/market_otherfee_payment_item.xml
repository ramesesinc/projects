<schema  adapter="market">

	<element tablename="market_otherfee_payment_item">
		<field name="objid" primary="true" prefix="MKTOFITM"/>
		<field name="parentid" required="true"/>
		<field name="refid" required="true"/>
		<field name="item_objid" required="true"/>
		<field name="item_title" required="true"/>
		<field name="month" required="true"/>
		<field name="year" required="true"/>
		<field name="amount" required="true" type="decimal" defaultValue="0"/>
		<field name="surcharge" required="true"  type="decimal" defaultValue="0"/>
		<field name="interest" required="true"  type="decimal" defaultValue="0"/>
		<field name="monthname" expr="MONTH_ARRAY(month)"/>
		<field name="linetotal" expr="amount+surcharge+interest"/>
	</element>
</schema>
