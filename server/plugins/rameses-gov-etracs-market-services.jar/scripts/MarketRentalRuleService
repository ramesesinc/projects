import com.rameses.annotations.*;
import com.rameses.util.*;
import com.rameses.functions.*;

import java.rmi.server.*;
import com.rameses.services.extended.*;
import com.rameses.rules.common.*;
import market.facts.*;
import market.actions.*;

public class MarketRentalRuleService  {

	@Service("RuleExecutorService")
	def ruleSvc;

	@Service("MarketRentalUnitService")
	def unitSvc;


	@ProxyMethod
	public def computeRate(o) {
		def ru = em.find( [objid: o.rentalunit.objid] ).first();
		if(!ru) throw new Exception("Rental unit not found!");

		def z = [:];
		z.bldgid = o.rentalunit.bldgid;
        z.unittype = o.rentalunit.unittype;
        z.section = o.rentalunit.section;
        z.attributes = ru.attributes*.attribute;
        return rentalSvc.execute( z );
	}

	@ProxyMethod
	public def execute( def o ) {
		def mu = new MarketUnit(o);
		def facts = [];
		facts <<  mu;

		def req = [facts:facts];
		def actions = new RuleAction();
		actions.addCommand( "calc_rate", new CalcRate( request:req) );

		ruleSvc.execute( "marketrental", facts, actions, null );
		return [
			rate: mu.rate
		];
	}
}

