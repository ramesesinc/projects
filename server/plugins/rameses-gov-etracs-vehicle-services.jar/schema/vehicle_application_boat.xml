<schema adapter="vehicledb">
	<element tablename="vehicle_application_boat" extends="vehicle_application">
		<field name="objid" primary="true" prefix="BOATAPP" />

		<field name="length" type="decimal"/>
		<field name="breadth" type="decimal"/>
		<field name="depth" type="decimal"/>
		<field name="grosstonnage" type="decimal"/>
		<field name="nettonnage" type="decimal"/>
		<field name="buildername" required="true"/>
		<field name="builderplace" required="true"/>
		<field name="buildyear" type="integer"/>

		<!--
		<complex name="homeport" ref="homeport" jointype="many-to-one" includefields="id,name">
			<key field="homeport_id" target="id"/>		
		</complex>	
		-->
		
		<complex name="engines" ref="vehicle_application_boat_engine" jointype="one-to-many">
			<key field="objid" target="appid"/>
		</complex> 

		<complex name="fees" ref="vehicle_application_fee" jointype="one-to-many">
			<key field="objid" target="appid" />
		</complex>

	</element>
</schema>