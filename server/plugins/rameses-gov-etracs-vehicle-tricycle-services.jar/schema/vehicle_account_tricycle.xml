<schema adapter="vehicledb">
	<element tablename="vehicle_account_tricycle" extends="vehicle_account">
		<field name="objid" primary="true" prefix="VMTOP"/>
		<field name="plateno" required="true" caption="Plate No"/>
		<field name="engineno" required="true" caption="Engine No"/>
		<field name="bodyno" required="true" caption="Body No"/>
		<field name="sidecarno" required="false" caption="Sidecar No"/>
		<field name="make" required="false" caption="Make"/>
		<field name="model" required="false" caption="Model"/>
		<field name="color" required="false" caption="Color"/>
	</element>
</schema>