<schema adapter="vehicledb">
	<element tablename="vehicle_tricycle">
		<field name="objid" primary="true" prefix="VMTOP"/>
		<field name="plateno" required="true" caption="Plate No" indexed="true" searchable="true"/>
		<field name="engineno" required="true" caption="Engine No" indexed="true"  searchable="true"/>
		<field name="chassisno" required="true" caption="Chassis No" indexed="true"  searchable="true"/>
		<field name="make" required="false" caption="Make"/>
		<field name="model" required="false" caption="Model"/>
		<field name="color" required="false" caption="Color"/>

		<field name="sidecarno" required="false" caption="Sidecar No"/>
		<field name="bodyno" required="false" caption="Body No" />
		<field name="sidecarcolor" required="false" caption="Sidecar Color"/>

		<field name="createdby_objid" required="true" />
		<field name="createdby_name" required="true" caption="Created By"/>
		<field name="dtcreated" required="true" caption="Date Created"/>

		<complex name="franchise" ref="vehicle_franchise" jointype="many-to-one" required="false"
			includefields="controlno,state">
			<key field="controlid" target="objid" />	
		</complex>  
		
		<complex name="app" ref="vehicle_application" jointype="many-to-one" required="false"
			includefields="appno">
			<key field="appid" target="objid"/>
		</complex>	
	</element>
</schema>