<schema adapter="waterworks">
	<element tablename="waterworks_billing_account">
		<field name="objid" required="true" prefix="" />
		<field name="parentid" required="true"/>
		<field name="state" required="true"/>
		<complex name="account" ref="waterworks_account" jointype="many-to-one" includefields="acctname"> 
			<key field="acctid" target="objid" />
		</complex>
		<field name="readingdate" required="true" type="timestamp"/>
		<field name="prevreading" required="true" type="integer"/>
		<field name="reading" required="true" type="integer"/>
		<field name="reader_objid" required="true" />
		<field name="reader_name" required="true"/>
		<field name="discrate" required="true" type="decimal"/>
		<field name="surcharge" required="true" type="decimal"/>
		<field name="interest" required="true" type="decimal"/>
		<field name="credit" required="true" type="decimal"/>
	</element>
</schema>
