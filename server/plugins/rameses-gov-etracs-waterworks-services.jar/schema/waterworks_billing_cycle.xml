<schema adapter="waterworks"> 

	<element tablename="waterworks_billing_cycle">
		<field name="objid" primary="true"/> 
		<field name="sectorid" required="true" caption="Sector"/> 
		<field name="year" required="true" caption="Year"/> 
		<field name="month" required="true" caption="Month"/> 

		<field name="fromperiod"  indexed="true" type="date" editable="false" caption="From Period"/>
		<field name="toperiod"  indexed="true" type="date" editable="false" caption="To Period"/>
		<field name="duedate"  indexed="true" type="date" editable="false"  caption="Due Date" visible="false"/>
		<field name="billdate"  indexed="true" type="date" editable="false" caption="Bill Date"/>
		<field name="readingdate"  indexed="true" type="date" caption="Reading Date" editable="false"/>
		<field name="disconnectiondate" indexed="true" type="date" caption="Disconnection Date" editable="false" visible="false"/>
	
	</element> 
</schema>