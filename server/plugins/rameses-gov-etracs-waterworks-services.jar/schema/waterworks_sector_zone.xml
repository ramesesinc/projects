<schema adapter="waterworks">

	<element tablename="waterworks_sector_zone">
		<field name="objid" primary="true" prefix="WSZ"/>
		<field name="code" caption="Zone Code"/>
		<field name="description" caption="Zone Description"/>
		<field name="sectorid"/>

		<complex name="sector" ref="waterworks_sector" jointype="many-to-one" required="false"
			includefields="objid,code">
			<key field="sectorid" target="objid" />
		</complex>	
				
		<complex name="reader" ref="waterworks_sector_reader" jointype="many-to-one" required="false"
			includefields="objid,assignee.name,assignee.objid">
			<key field="readerid" target="objid" />
		</complex>	
	</element>

</schema>
