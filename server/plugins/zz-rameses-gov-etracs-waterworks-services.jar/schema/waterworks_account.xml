<schema adapter="waterworks">
	<element tablename="waterworks_account">
		<field name="objid" primary="true"/>
		<field name="state" required="true"/>
		<field name="dtstarted" required="false"/>
		<field name="acctno" required="true"/>
		<field name="acctname" required="true"/>
		<field name="applicationid" required="false"/>
		<field name="owner_objid" required="true"/>
		<field name="owner_name" required="true"/>
		<field name="address_objid" required="false"/>
		<field name="address_text" required="true" caption="Address"/>
		<field name="mobileno" required="false"/>
		<field name="phoneno" required="false"/>
		<field name="email" required="false"/>
		<field name="meterid" required="true"/>
		<field name="classificationid" required="true"/>
		<field name="areaid" required="true"/>
		<field name="balance" required="true"/>
		<field name="lastreadingdate" required="true"/>
		<field name="lasttxndate" required="true"/>
		<field name="lastreadingmonth" required="true"/>
		<field name="lastreadingyear" required="true"/>
		<field name="lastreading" required="true"/>
		<field name="prevreading" required="true"/>
	</element>
</schema>