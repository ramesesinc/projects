<schema adapter="waterworks">
	<element tablename="waterworks_payment_item">
		<field name="objid" primary="true" prefix="WPI" />
		<complex name="paymentitem" jointype="one-to-many" ref="waterworks_payment" required="true">
			<key field="parentid" target="objid"/>
		</complex>
		<field name="txnrefid" required="true" />
		<field name="amount" required="true" />
		<field name="discount" required="true" />
		<field name="surcharge" required="true" />
		<field name="interest" required="true" />
		<field name="remarks"  />
	</element>
</schema>