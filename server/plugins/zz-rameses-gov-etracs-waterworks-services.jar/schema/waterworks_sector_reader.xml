<schema adapter="waterworks">
	<element tablename="waterworks_sector_reader">
		<field name="objid" primary="true" prefix="WSR"/>
		<field name="title" required="true" indexed="true" caption="Name"/>
		<field name="assignee_objid" caption="Assignee ID" visible="false"/>
		<field name="assignee_name" caption="Assignee Name"/>
		<!-- field name="sectorid" / -->
		
		<complex name="sector" ref="waterworks_sector" jointype="many-to-one" required="false">
			<key field="sectorid" target="objid"/>
		</complex>
		
	</element>
</schema>