import com.rameses.annotations.*;

class WaterworksAccountQueryInterceptor{
	
	@After(pattern="QueryService.getNodeList", eval="#{args[0]._schemaname == 'waterworks_account'}")
	public void getAcctNodeList(def evt) {
		def result = evt.result;
		result << [ title: 'Active', id:'active'];
		result << [ title: 'For Reading', id:'for-reading'];
		result << [ title: 'Processing', id:'processing'];
		result << [ title: 'For Disconnection', id:'for-disconnection'];
		result << [ title: 'Disconnected', id:'disconnected'];
		result << [ title: 'For Reconnection', id:'for-reconnection'];
	}

	@Before(pattern="QueryService.getList", eval="#{args[0]._schemaname == 'waterworks_account'}")
	public void loadList(def evt) {
		def o = evt.args[0];
		if( !o.node?.id ) return;

		def str = "state=:state";
		def m = [:];
		def status;

		switch( o.node.id ) {
			case 'active':
				status = 'active';
				m.state = 'ACTIVE';
				break;
			case 'for-reading':
				status = 'for-reading';
				m.state = 'ACTIVE'
				str += ' AND billingcycle.readingdate <= NOW() AND (lastdateread IS NULL OR lastdateread < billingcycle.readingdate)'; 
				break;

			case 'processing':
				status = 'processing';
				m.state = 'PROCESSING';
				break;

			case 'for-disconnection':
				status = 'for-disconnection';
				m.state = 'ACTIVE';
				str += ' AND billingcycle.disconnectiondate < NOW() AND (lastdatepaid IS NULL OR lastdatepaid < billingcycle.disconnectiondate)'; 
				break;

			case 'disconnected':
				status = 'disconnected';
				m.state = 'DISCONNECTED';
				break;

			case 'for-reconnection':
				status = 'for-reconnection';
				m.state = 'FOR-RECONNECTION';
				break;
		}

		//add to first position of where
		if( o.where ) {
			o.where[0] = str + " AND " + o.where[0];	
			o.where[1].putAll( m );
		}
		else {
			o.where = [str, m];
		}
		o.select += ",status:{'" + status + "'}";
	}

}