import com.rameses.annotations.*;
import java.rmi.server.UID;

class WaterworksCashReceiptInterceptor{

	@DataContext("waterworks_account")
	def wa;
	
	@DataContext("waterworks_account_consumption")
	def wc;

	@DataContext("waterworks_payment")
	def wp;

	@DataContext("waterworks_payment_item")
	def wpi;

	@After(pattern="CashReceiptService.post", eval="#{result.collectiontype?.handler == 'waterworks'}")
	public void postPayment(def evt) {
		def o = evt.args[0];
		def pmt = [:];
		pmt.account = [objid : o.acctid];
		pmt.reftype = "cashreceipt";
		pmt.refid = o.objid;
		pmt.refno = o.receiptno;
		pmt.refdate = o.receiptdate;
		pmt.amount = o.amount;
		pmt.voided = 0;
		pmt.items = [];

		o.billitems.each {
			def p = [:];
			p.txnrefid = it.refid;
			p.amount = it.amount;
			p.discount = it.discount;
			p.surcharge = it.surcharge;
			p.interest = it.interest;
			pmt.items << p;
		}

		wp.create( pmt );

		def paymentitem = wp.create(pmt);

		def acct = wa.find([objid:o.acctid]);
		def balance = acct.first().balance - pmt.amount;
		if(balance < 0) balance = 0;
		acct.update([balance:balance]);

		def ex = wc.createExecutor('''
			UPDATE waterworks_account_consumption 
			SET amtpaid=amtpaid + $P{amount}
			WHERE objid=$P{txnrefid}
		''');

		o.billitems.each {
			def p = [:];
			p.paymentitem = [objid:paymentitem.objid];
			p.txnrefid = it.refid;
			p.amount = it.amount;
			p.discount = it.discount;
			p.surcharge = it.surcharge;
			p.interest = it.interest;
			wpi.create(p);
			pmt.items << p;
			ex.setParameters( p ).execute();
		}
	}

	@After(pattern="CashReceiptVoidService.post",index=0,eval="#{result.receipt.collectiontype.handler=='waterworks'}")
	public void voidPayment(def evt) {
		def rct = evt.result.receipt;

		def pmt = wp.find([refid: rct.objid ]).first();
		def items = wpi.find( [parentid: pmt.objid] ).list();
		
		wp.find( [objid: pmt.objid] ).update([voided:1]);

		def ex = wc.createExecutor('''
			UPDATE waterworks_account_consumption 
			SET amtpaid=amtpaid - $P{amount}
			WHERE objid=$P{txnrefid}
		''');

		items.each {
			def p = [txnrefid: it.txnrefid, amount: it.amount]; 
			ex.setParameters( p ).execute();
		}
	}

}