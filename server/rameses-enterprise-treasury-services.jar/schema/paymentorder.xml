<schema>
	<element tablename="paymentorder">
		<field name="objid" primary="true" prefix="PMT"/>
		<field name="controlno" searchable="true" indexed="true"/>
		<field name="txntype" required="true"/>
		<field name="expirydate" type="date"/>
		<field name="payer_objid" />
		<field name="payer_name" searchable="true" indexed="true"/>
		<field name="paidby" required="true"/>
		<field name="paidbyaddress" required="true"/>
		<field name="amount" required="true" type="decimal"/>
		<field name="particulars" required="false"/>
		<field name="createdby_objid" required="true"/>
		<field name="createdby_name" required="true"/>
		<field name="state" />
		<complex name="items" ref="paymentorderitem" jointype="one-to-many"  required="true" lazy="false">
			<key field="objid" target="parentid"/>
		</complex>	
		<complex name="receipt" ref="cashreceipt" jointype="many-to-one"  required="false" includefields="receiptno,receiptdate,collector.name">
			<key field="receiptid" target="objid"/>
		</complex>	
	</element>
</schema>
