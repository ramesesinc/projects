import com.rameses.annotations.*;
import com.rameses.util.*;
import com.rameses.common.*

class PaymentPartnerService  
{

	@Env 
	def env 


	@DataContext('payment_partner')
	def payment_partner


	@ProxyMethod
	public def getInfo(params) {
		if (!params.partnerid) throw new Exception('partnerid is required.')
		if (!params.pmo) throw new Exception('pmo is required.')

		def partner = payment_partner.read([objid:params.partnerid])
		if (!partner) throw new Exception('Partner ' + params.partnerid + ' is not registered.')

		return partner 	
	}
}
