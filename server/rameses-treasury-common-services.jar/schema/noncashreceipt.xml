<schema>
	<element tablename="noncashreceipt" >
		<field name="objid" primary="true" prefix="BRCT"/>
		<field name="state" required="true" />
		<field name="txndate" required="true"  type="timestamp"/>
		<field name="receiptno" required="true" searchable="true" indexed="true" caption="Receipt No"/>
		<field name="receiptdate" required="true" caption="Receipt Date" indexed="true" type="date"/>
		<field name="txntype" required="true" indexed="true" caption="Txn Mode"/>
		<field name="payer_objid"  />
		<field name="payer_name"  caption="Payer" searchable="true"  indexed="true"/>
		<field name="paidby" required="true" caption="Paid By"/>
		<field name="paidbyaddress" required="true" />
		
		<field name="amount" required="true" type="decimal" caption="Amount"/>
		
		<field name="org_objid" required="true" />
		<field name="org_name" required="true" indexed="true" caption="Org Name"/>
		
		<field name="collectiontype_objid" required="false" />

		<complex name="collectiontype" ref="collectiontype" jointype="many-to-one" required="true" includefields="handler">
			<key field="collectiontype_objid" target="objid" />
		</complex> 

		<field name="user_objid" />
		<field name="user_name" indexed="true" caption="User Name"/>
		<field name="remarks" />

		<field name="collectionvoucherid"/>
		<field name="refid" />
		<field name="reftype" />

		<complex name="paymentitems" ref="noncashreceiptpayment" jointype="one-to-many">
			<key field="objid" target="receiptid" />
		</complex>

		<complex name="items" ref="noncashreceiptitem" jointype="one-to-many">
			<key field="objid" target="receiptid" />
		</complex>	

		<complex name="sharing" ref="noncashreceipt_share" jointype="one-to-many" required="false">
			<key field="objid" target="receiptid" />
		</complex>	


	</element>
	
	
</schema>

