function drawPieChart() {
	\$('#pie-graph').highcharts({
        chart: {
            plotBackgroundColor: null,
            plotBorderWidth: null,
            plotShadow: false
        },
        title: {
            xtext: '', 
            text: ''
        },
        tooltip: {
    	    xpointFormat: '{series.name}: <b>{point.percentage:.1f} % ({point.y})</b>'
        },
        plotOptions: {
            pie: {
                allowPointSelect: true,
                cursor: 'pointer',
                dataLabels: {
                    enabled: false,
                    color: '#000000',
                    connectorColor: '#000000',
                    format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                },
                showInLegend: true  
            }
        },
        legend: {
            enabled: true,
            layout: 'horizontal',
            verticalAlign: 'bottom',                
            align: 'center',
            useHTML: true, 
            labelFormatter: function() { 
                return '<div style="width:125px;">'+this.name+': '+this.y+'%</div>'
            }
        }, 
        series: [{
            type: 'pie',
            name: 'keyword',
            data: piedata
        }]
    });
}
function drawLineChart() {
	\$('#bar-graph').highcharts({
        chart: {
            type: 'line'
        },
        title: {
            text: ''
        },
        subtitle: {
            text: ''
        },
        xAxis: {
            categories: ['JAN', 'FEB', 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SEP', 'OCT', 'NOV', 'DEC'] 
        },
        yAxis: {
            title: {
                text: 'Value'
            }
        },
        tooltip: {
            enabled: false,
            formatter: function() {
                return '<b>'+ this.series.name +'</b><br/>'+ this.x +': '+ this.y +'Â°C';
            }
        },
        plotOptions: {
            line: {
                dataLabels: {
                    enabled: true
                },
                enableMouseTracking: false
            }
        },
        series: linedata, 
        xseries: [{
            name: 'Tokyo',
            data: [7.0, 6.9, 9.5, 14.5, 18.4, 21.5, 25.2, 26.5, 23.3, 18.3, 13.9, 9.6]
        }, {
            name: 'London',
            data: [3.9, 4.2, 5.7, 8.5, 11.9, 15.2, 17.0, 16.6, 14.2, 10.3, 6.6, 4.8]
        }]
    });
}
BindingUtils.loaders.push(function(){
    if (pielist && pielist.length > 0) {
        drawPieChart(); 
    } else {
        \$('#pie-graph').html('<p class="no-info">- No available information -</p>');
    } 
}); 
</script>
