<script>
var qnpage = @register('/rptbill')

\$put("pay", 
   new function() {
	this.message;
	var self = this;
	this.payoption = function() {
		var handler = function(x) {
			self.message = "this value is called from the opener:" + x;
			self._controller.refresh();
		}
		return new PopupOpener(qnpage.id); 
	}

   }
);   
</script>